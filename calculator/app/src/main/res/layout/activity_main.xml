<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aravindan.calculator.MainActivity">

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/t3"
        android:layout_marginStart="41dp"
        android:layout_marginTop="20dp"
        android:text="+"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/b1"
        android:layout_marginTop="49dp"
        android:text="Number 1"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e1"
        android:layout_marginTop="45dp"
        android:layout_toStartOf="@+id/e2"
        android:text="Number 2"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/b1"
        android:layout_centerVertical="true"
        android:text="Result"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t1"
        android:layout_toEndOf="@+id/b1"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/e2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/e1"
        android:layout_alignTop="@+id/t2"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/t4"
        android:layout_width="90px"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/t3"
        android:layout_alignBottom="@+id/t3"
        android:layout_toEndOf="@+id/b1"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/e2"
        android:layout_alignTop="@+id/b1"
        android:text="-"
        android:textSize="40dp"/>

    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/b1"
        android:layout_below="@+id/b2"
        android:layout_marginTop="38dp"
        android:text="/"
        android:textSize="40dp"/>

    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/b2"
        android:layout_alignTop="@+id/b3"
        android:text="*"
        android:textSize="40dp"/>
</android.widget.RelativeLayout>
